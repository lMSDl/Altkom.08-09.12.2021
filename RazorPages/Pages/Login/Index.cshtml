@page
@model RazorPages.Pages.Login.IndexModel
@{
}



<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm())
        {

            <div class="form-group">
                @Html.Label("Username")
                @Html.Editor("username")
            </div>
            <div class="form-group">
                @Html.Label("Password")
                @Html.Editor("password")
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn" />
            </div>
        }
    </div>
</div>